            android:id="@+id/findButton"
            android:textSize="10dp"
            android:layout_marginHorizontal="5dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listBaoMoi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
